<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/milk">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_candy_cane"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/btn_bottom_margin"
        android:background="@drawable/circle"
        android:elevation="2dp"
        android:src="@drawable/ic_candy_cane"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_gingerbread_man"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btn_gingerbread_man"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/btn_bottom_margin"
        android:background="@drawable/circle"
        android:elevation="2dp"
        android:src="@drawable/ic_gingerbread_man"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_stocking"
        app:layout_constraintStart_toEndOf="@+id/btn_candy_cane" />

    <ImageButton
        android:id="@+id/btn_stocking"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/btn_bottom_margin"
        android:background="@drawable/circle"
        android:elevation="2dp"
        android:src="@drawable/ic_stocking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_wreath"
        app:layout_constraintStart_toEndOf="@+id/btn_gingerbread_man" />

    <ImageButton
        android:id="@+id/btn_wreath"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/btn_bottom_margin"
        android:background="@drawable/circle"
        android:elevation="2dp"
        android:src="@drawable/ic_wreath"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_star"
        app:layout_constraintStart_toEndOf="@+id/btn_stocking" />

    <ImageButton
        android:id="@+id/btn_star"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/btn_bottom_margin"
        android:background="@drawable/circle"
        android:elevation="2dp"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_wreath" />

</androidx.constraintlayout.widget.ConstraintLayout>